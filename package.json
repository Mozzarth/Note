{
  "name": "Notes",
  "version": "1.0.0",
  "description": "App para crear libretas y notas",
  "scripts": {
    "dev": "nodemon -L",
    "build": "npm run build:clean && npm run build:tsc && npm run build:dist",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:dist": "copy 'src/**/*.{json,yaml,html,png,env}' dist/src"
  },
  "author": "Mozzarth",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/mysql": "^2.15.17",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "husky": "^4.3.8",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "helmet": "^4.4.1",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.17",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
